<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <!--The toolbar, place this outside the navigation drawer fragment to make sure it isn't covered-->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <!--The layout needed for the navigation drawer MAKE SURE ORIENTATION OF PARENT LAYOUT IS VERTICAL!!!!-->
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


     <!--The container for the main fragment-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainContainer"/>



    <!--The navigation drawer fragment-->
    <fragment
        android:id="@+id/navigation_fragment"
        android:name="com.pyrospiral.android.templateapp.NavigationDrawerFragment"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_navigation_drawer" />


    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
