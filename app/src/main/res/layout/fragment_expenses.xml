<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pyrospiral.android.prototypeapp.ExpensesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">


        <com.echo.holographlibrary.PieGraph
            android:id="@+id/piegraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_centerInParent="true"
            app:pieInnerCircleRatio="128"
            app:pieSlicePadding="0dip" />


        <TextView
            android:id="@+id/percentage"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



        </RelativeLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/spinner"
             />




    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        style="?android:buttonBarStyle"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/amount1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/amount1"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/round_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/amount2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/amount2"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/round_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/amount3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/round_button"
            android:text="@string/amount3"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/amount4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/amount4"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/round_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_height="match_parent" />



        </LinearLayout>



</LinearLayout>
